<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.todo.androidtodo.EditItemActivity">

    <EditText
        android:id="@+id/etEditTodoField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="72dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/tvEditTodoLabel"
        android:layout_alignLeft="@+id/tvEditTodoLabel"
        android:layout_alignStart="@+id/tvEditTodoLabel" />

    <TextView
        android:id="@+id/tvEditTodoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Todo Below"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="28dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnSaveTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="onSave"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="131dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/etEditTodoField"
        android:layout_alignLeft="@+id/etEditTodoField"
        android:layout_alignStart="@+id/etEditTodoField" />
</android.widget.RelativeLayout>
